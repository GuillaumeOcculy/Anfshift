<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Sign in</h1>

    <%= form_tag sessions_path do %>

      <div class="form-group">
        <%= label_tag :email %>
        <%= email_field_tag  :email, nil, placeholder: 'Ex: john@doe.com', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: 'form-control' %>
      </div>

      <div class="form-group">
        <div>
          <%= submit_tag 'Log in', class: 'btn btn-lg btn-primary' %>
        </div>
        <div>
          <%= link_to "You don't have an account ? Sign up !", signup_path %>
        </div>
      </div>

    <% end %>


  </div>
</div>
