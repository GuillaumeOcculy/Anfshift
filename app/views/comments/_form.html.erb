<%= form_for([@shift, @shift.comments.build]) do |f| %>

  <div class="errors"></div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit nil, class: 'btn btn-default', id: 'submit' %>
  </div>


<% end %>
