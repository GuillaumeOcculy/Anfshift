<article class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"> <%=  link_to "##{shift.id}", shift %> - <%= shift.date.strftime "%A, %d %B" %> <%= shift.time.strftime "at %I:%M" %></h3>
  </div>

  <div class="panel-body">
    <p> <%= shift.description %> </p>
    <p> <%= link_to 'I want this shift !', shift %> </p>
    <span class="label label-info"> <%= shift.job.titleize %> </span>
  </div>

  <div class="panel-footer">
    <p> published by  <strong><%= shift.user.name %></strong>  </p>
    <p> <%= time_ago_in_words shift.created_at %> </p>
  </div>
</article>
